<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dev.adobongbangus.valentunaremotej.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="594dp"
        android:orientation="horizontal">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="@string/device"/>

        <Spinner
            android:id="@+id/device_spinner"
            android:layout_width="215dp"
            android:layout_height="33dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/textlabel2"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:text="@string/channel"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/channel_spinner"
            android:layout_width="207dp"
            android:layout_height="34dp"
            android:layout_marginLeft="4dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <VideoView
            android:id="@+id/VideoRender1"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="140dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

    <Button
        android:id="@+id/CamLivePlay"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="152dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/start_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
